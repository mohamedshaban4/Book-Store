@model BookStore.BLL.DTOs.AuthorDto

@{
    ViewData["Title"] = "Delete Author";
}

<div class="container">
    <h1 class="display-4">Delete Author</h1>

    <div class="card border-danger mb-3">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Are you sure you want to delete this author?</h3>
        </div>
        <div class="card-body">
            <h4 class="card-subtitle mb-2">Author Details:</h4>
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                <dt class="col-sm-2"> Books:</dt>
                <dd class="col-sm-10">@Model.BooksCount</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
