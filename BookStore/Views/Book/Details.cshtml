@model BookStore.BLL.DTOs.BookDto

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Book Details</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Book Details</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-dark text-light">Title</th>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <th class="bg-dark text-light">Description</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th class="bg-dark text-light">ISBN</th>
                            <td>@Model.ISBN</td>
                        </tr>
                        <tr>
                            <th class="bg-dark text-light">Price</th>
                            <td>@Model.Price</td>
                        </tr>
                        <tr>
                            <th class="bg-dark text-light">Author</th>
                            <td>@Model.AuthorName</td>
                        </tr>
                        <tr>
                            <th class="bg-dark text-light">Image</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="~/Files/BookImages/@Model.ImageUrl" alt="@Model.Title" style="max-width: 200px; margin-top: 10px;" />
                                }
                                else
                                {
                                    <span>No image available</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-primary mr-2" asp-action="Index">Back to List</a>
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
    </div>
</div>
